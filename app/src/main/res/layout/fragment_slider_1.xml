<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="56dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ojk" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/FontStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Ajukan Pinjaman Mudah" />

    <TextView
        android:id="@+id/txt_deskripsi"
        style="@style/FontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Minimal pinjaman dari Rp. 1.000.000 ( Cukup KTP )\nLengkapi dokumen agar pengajuanmu lebih cepat di setujui tidak pakai ribet\nTerdaftar dan di awasi oleh : OJK" />

</LinearLayout>